{
  "name": "ccscan",
  "description": "Scan files for credit card numbers",
  "version": "1.1.3",
  "author": "Neo Financial Engineering <engineering@neofinancial.com>",
  "license": "MIT",
  "main": "build/index.js",
  "bin": {
    "ccscan": "bin/ccscan.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neofinancial/ccscan"
  },
  "engines": {
    "node": ">=12.22.1"
  },
  "scripts": {
    "start": "./bin/ccscan.js",
    "watch": "ncc build src/app.ts -o build --minify --watch",
    "build": "ncc build src/app.ts -o build --minify",
    "clean": "rimraf build",
    "test": "NODE_ENV=test jest",
    "lint": "eslint \"**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml,md}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,yaml,yml,md}\"",
    "prepublishOnly": "rimraf build && ncc build src/app.ts -o build --minify"
  },
  "files": [
    "bin",
    "build"
  ],
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,yaml,yml,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/line-reader": "0.0.34",
    "@types/node": "16.11.0",
    "@types/yargs": "17.0.4",
    "@vercel/ncc": "0.22.3",
    "chalk": "4.1.2",
    "eslint": "7.32.0",
    "eslint-config-neo": "0.6.2",
    "fast-luhn": "2.0.0",
    "globby": "11.0.4",
    "husky": "7.0.2",
    "jest": "26.6.3",
    "line-reader": "0.4.0",
    "lint-staged": "11.2.3",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "strip-ansi": "6.0.1",
    "ts-jest": "26.5.5",
    "ts-node": "10.3.0",
    "typescript": "4.4.4",
    "yargs": "17.2.1"
  }
}
