{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2015",
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "typeRoots": ["src/types", "node_modules/@types"],
    "paths": {
      "*": ["*", "node_modules/*", "src/*"]
    }
  },
  "include": ["src/**/*"]
}
