{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ES2021",
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "typeRoots": [
      "../src/types",
      "../node_modules/@types"
    ],
    "paths": {
      "*": [
        "*",
        "node_modules/*",
        "src/*"
      ]
    }
  },
  "include": [
    "../src/**/*",
    "./**/*"
  ]
}